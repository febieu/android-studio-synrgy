<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <!--dengan pake parent membuat atribut penting tinggal copy2ajaa !-->
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>
    <style name="TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="ButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/design_default_color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonSecondary" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundTint">#00000000</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
    </style>
    <style name="TWOHSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FFD500F9</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF311B92</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF757575</item>
    </style>
</resources>